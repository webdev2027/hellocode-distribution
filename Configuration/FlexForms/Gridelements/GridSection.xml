<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<T3DataStructure>
    <meta type="array">
        <langDisable>1</langDisable>
    </meta>
    <sheets>
        <general>
            <ROOT type="array">
                <TCEforms>
                    <sheetTitle>LLL:EXT:hellotypo3/Resources/Private/Language/backend.xlf:gridelements.GridSection.flexforms.title</sheetTitle>
                </TCEforms>
                <el type="array">

                    <checkboxfull>
                        <TCEforms>
                            <label>LLL:EXT:hellotypo3/Resources/Private/Language/backend.xlf:gridelements.GridSection.flexforms.checkboxfull</label>
                            <config>
                                <type>check</type>
                                <default>0</default>
                            </config>
                        </TCEforms>
                    </checkboxfull>


                    <parallax type="array">
                        <TCEforms type="array">
                            <label>LLL:EXT:hellotypo3/Resources/Private/Language/backend.xlf:gridelements.GridSection.flexforms.parallax</label>
                            <config type="array">
                                <type>select</type>
                                <items type="array">
                                    <numIndex index="0" type="array">
                                        <numIndex index="0">Parallax Effect</numIndex>
                                        <numIndex index="1">parallax</numIndex>
                                    </numIndex>
                                    <numIndex index="1" type="array">
                                        <numIndex index="0">No Parallax, Primary Background Color</numIndex>
                                        <numIndex index="1">bg-primary</numIndex>
                                    </numIndex>
                                    <numIndex index="2" type="array">
                                        <numIndex index="0">No Parallax, Secondary Background Color</numIndex>
                                        <numIndex index="1">bg-secondary</numIndex>
                                    </numIndex>
                                    <numIndex index="3" type="array">
                                        <numIndex index="0">No Parallax, Transparent Background Color</numIndex>
                                        <numIndex index="1">bg-transparent</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </parallax>

                    <backgroundparallax type="array">
                        <TCEforms type="array">
                            <label>LLL:EXT:hellotypo3/Resources/Private/Language/backend.xlf:gridelements.GridSection.flexforms.backgroundparallax</label>
                            <config type="array">
                                <type>inline</type>
                                <maxitems>1</maxitems>
                                <foreign_table>sys_file_reference</foreign_table>
                                <foreign_table_field>tablenames</foreign_table_field>
                                <foreign_label>uid_local</foreign_label>
                                <foreign_sortby>sorting_foreign</foreign_sortby>
                                <foreign_selector>uid_local</foreign_selector>
                                <foreign_selector_fieldTcaOverride type="array">
                                    <config>
                                        <appearance>
                                            <elementBrowserType>file</elementBrowserType>
                                            <elementBrowserAllowed>jpg,png</elementBrowserAllowed>
                                        </appearance>
                                    </config>
                                </foreign_selector_fieldTcaOverride>
                                <foreign_match_fields type="array">
                                    <fieldname>image</fieldname>
                                </foreign_match_fields>
                                <appearance type="array">
                                    <newRecordLinkAddTitle>1</newRecordLinkAddTitle>
                                    <headerThumbnail>
                                        <field>uid_local</field>
                                        <height>64</height>
                                        <width>64</width>
                                    </headerThumbnail>
                                </appearance>
                            </config>
                        </TCEforms>
                    </backgroundparallax>

                </el>
            </ROOT>
        </general>
    </sheets>
</T3DataStructure>